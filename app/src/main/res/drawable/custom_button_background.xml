<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#1B5E20" />
        </shape>
    </item>

    <!-- Estado enfocado (para navegaciÃ³n con teclado/D-pad) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="8dp" />
            <stroke android:width="3dp" android:color="#81C784" />
        </shape>
    </item>

    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#C8E6C9" />
        </shape>
    </item>

    <!-- Estado por defecto  -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#2E7D32" />
        </shape>
    </item>

</selector>