<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ManualFlightFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_motorStop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Motor Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="100px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_motorSend" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sld_throttle"
        android:layout_width="207dp"
        android:layout_height="100dp"
        android:rotation="-90"
        android:stepSize="1"
        android:value="1600"
        android:valueFrom="1500"
        android:valueTo="2000"
        app:layout_constraintBottom_toBottomOf="@+id/btn_motorSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toEndOf="@+id/btn_motorSend"
        app:layout_constraintTop_toTopOf="@+id/btn_motorSend"
        app:layout_constraintVertical_bias="0.453" />

    <Button
        android:id="@+id/btn_motorSend"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="SEND"
        app:layout_constraintBottom_toTopOf="@+id/btn_motorStop"
        app:layout_constraintEnd_toStartOf="@+id/sld_throttle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>