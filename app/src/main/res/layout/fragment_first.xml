<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#525050"
    android:elevation="6dp"
    tools:context=".controller.fragments.FirstFragment">

    <TextView
        android:id="@+id/button_fly"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/custom_main_button"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center_vertical"
        android:text="Fly"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/button_stats"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/custom_main_button"
        android:clickable="true"
        android:elevation="20dp"
        android:enabled="false"
        android:gravity="center_vertical"
        android:text="Stats"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fly" />

    <TextView
        android:id="@+id/button_tools"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/custom_main_button"
        android:clickable="true"
        android:elevation="20dp"
        android:enabled="true"
        android:gravity="center_vertical"
        android:text="Tools"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stats" />
</androidx.constraintlayout.widget.ConstraintLayout>